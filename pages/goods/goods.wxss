page{
  background-color: #f5f5f5;
}
.goods {
  width: 100%;
  height: 780rpx;
  border-radius: 0 0 20rpx 20rpx;
  background-color: #ffffff;
  margin-bottom: 30rpx;
}
.goods .banner .imgs{
  width: 100%;
  height: 632rpx;
}
.goods .banner .imgs image{
  width: 100%;
  height:  632rpx;
}
.goods .text {
  width: 100%;
  height: 148rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.goods .text h1,
.goods .text h2 {
  width: 100%;
  font-size: 36rpx;
  line-height: 40rpx;
}
.goods .text h1{
  display: block;
  margin-bottom: 10rpx;
}
.goods .text h2{
  color: #fd2f3d;
}

.goods .text h2 label{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #ddeedd;
  text-decoration:line-through;
  margin-right: 4rpx;
}
.goods .text h2 text{
  display: inline-block;
  text-align: center;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #fd2f3d;
  padding: 0 10rpx;
  background-color: #ddeedd;
  border-radius: 15px;
}
.goods .text h3{
  display: block;
  float: right;
  margin-right: 20rpx;
  color: #7e7e7e;
}

.details{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  margin-bottom: 100rpx;
}
.details .select{
  width: 100%;
  height: 106rpx;
  font-size: 40rpx;
  line-height: 104rpx;
  border-bottom: 2rpx solid #dedede;
}
/* 弹出框 */
.details .van{
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  padding: 28rpx;
  border: 1px solid #dedede;
}
.details .van h1 image{
  display: block;
  width: 204rpx;
  height: 204rpx;
  border-radius: 20rpx;
  float: left;
  margin: 0;
  padding-right: 20rpx;
}
.details .van h2{
  display: block;
  float: left;
  width: 53%;
  height: 50rpx;
  font-size: 50rpx;
  line-height: 50rpx;
  margin: 32rpx 0 30rpx;
}
.details .van h3{
  display: block;
  float: left;
  width: 45%;
  height: 50rpx;
  font-size: 50rpx;
  line-height: 50rpx;
  margin-bottom: 6rpx;
  color: #fa1517;
}
.details .van h4{
  display: block;
  float: left;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #dedede;
}
.details .van-list{
  box-sizing: border-box;
  padding: 0 28rpx 0 28rpx;
}
.details .van-list .ul{
  width: 100%;
  height: 160rpx;
  /* background-color: orange; */
  box-sizing: border-box;
  padding: 28rpx 28rpx 0 28rpx;
}
.details .van-list .ul text{
  display: block;
  width: 100%;
  height: 36rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  margin-top: 10rpx;
  margin-bottom: 16rpx;
}
.details .van-list .ul .li{
  width: 168rpx;
  height: 62rpx;
  text-align: center;
  line-height: 62rpx;
  border: 4rpx solid #dedede;
  border-radius: 35rpx;
  margin-right: 20rpx;
  float: left;
}
.details .van-list .ul .li:active{
  color: #ffffff;
  background-color: #fd4454;
}
.details .van-list .num{
  width: 100%;
  height: 120rpx;
  /* background-color: orange; */
  box-sizing: border-box;
  padding: 36rpx 28rpx;
}
.details .van-list .num text{
  display: block;
  width: 76%;
  height: 36rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  float: left;
}
.details .van-list .num .btn{
  width: 150rpx;
  height: 44rpx;
  text-align: center;
  display: flex;
  font-size: 32rpx;
}
.details .van-list .num .btn .left,
.details .van-list .num .btn .right{
  width: 40rpx;
  height: 100%;
  line-height: 44rpx;
}
.details .van-list .num .btn .center{
  width: 70rpx;
  height: 100%;
  line-height: 44rpx;
  background-color: #dedede;
}
.details .van-list .btnn{
  width: 100%;
  height: 74rpx;
  box-sizing: border-box;
  padding: 60rpx;
  background-color: #fd4454;
  font-size: 36rpx;
  line-height: 0rpx;
  text-align: center;
  color: #ffffff;
  border-radius: 60rpx;
  margin-top: 60rpx;
}

.details .select image{
  width: 40rpx;
  height: 40rpx;
  margin: 32rpx 0;
  float: right;
}
.details .text{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 0;
  font-size: 36rpx;
  line-height: 36rpx;
}
.details .imgs{
  width: 100%;
  margin-bottom: 100rpx;
}
.details .imgs image{
  width: 100%;
  height: 510rpx;
  border-radius: 20rpx;
}

.footnav{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-top: 1px solid #dedede;
  background-color: #ffffff;
}
.footnav .leftnav .left{
  width: 38%;
  height: 100%;
  float: left;
}
.footnav .leftnav .left{
  width: 38%;
  height: 100%;
  display: flex;
  text-align: center;
}
.footnav  .leftnav .left h1{
  display: inline-block;
  flex: 1;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #8a8a8a;
}
.footnav  .leftnav .left h1 image{
  width: 44rpx;
  height: 44rpx;
  margin: 13rpx 0 6rpx 0;
}
.footnav  .leftnav .left h1 text{
  display: block;
  position: relative;
}
.footnav  .leftnav .left h1 h2{
  position: absolute;
  top: 5px;
  left: 125px;
  width: 20rpx;
  color: #ffffff;
  border-radius: 50%;
  height: 20rpx;
  font-size: 20rpx;
  background-color: #fd4454;
}
.footnav  .right{
  float: right;
  width: 62%;
  height: 100%;
  background-color:rgb(53, 129, 192);
  color: #ffffff;
}
.footnav  .right .add,
.footnav  .right .buy{
  width: 50%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
}
.footnav  .right .add{
  float: left;
  background-color: #333333;
}
.footnav  .right .buy{
  float: right;
  background-color: #fd2f3d;
}

