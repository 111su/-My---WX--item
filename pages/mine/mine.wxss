page{
  background-color: #f5f5f5;
}
.topbox{
  width: 100%;
  height: 150rpx;
  background: linear-gradient(to right,#ff4a3c,#ff45cb);
  position: relative;
  z-index: 999;
}
.topbox .user{
  width: 91%;
  height: 224rpx;
  border: 1px solid #dedede;
  border-radius: 24rpx;
  position: absolute;
  top: 72rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
  background-color: #ffffff;
  box-shadow: 0rpx 6rpx 8rpx 0rpx #DEDEDF;
}
.topbox .user .img{
  position: absolute;
  top: -72rpx;
  left: 39%;
}
.topbox .user .img image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.topbox .user .user-name{
  display: block;
  text-align: center;
  height: 40rpx;
  width: 100%;
  font-size: 40rpx;
  line-height: 40rpx;
  margin-top: 96rpx;
  margin-bottom: 20rpx;
  color: #333333;
}
.topbox .user .user-id{
  display: block;
  text-align: center;
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  color: #dedede;
}
.nulll{
  height: 182rpx;
  background-color: #ffffff;
}

.my-list{
  width: 100%;
  height: 108rpx;
  border-bottom: 1px solid #dedede;
  box-sizing: border-box;
  padding: 0 24rpx 22rpx 24rpx;
  display: flex;
  align-items: flex-end;
  background-color: #ffffff;
}
.my-list image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 16rpx;
}
.my-list .font{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
}
.my-list .icon{
  justify-content: flex-end;
}
.my-list .icon image{
  width: 36rpx;
  height: 36rpx;
  margin: 6rpx 0;
}